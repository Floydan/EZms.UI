@using EZms.Core.Models
@using EZms.UI.Infrastructure.Helpers
@model EZms.UI.Areas.EZms.Models.ModelProperty

@{
    int? value = (int?) null;
    if (Model?.Value is ContentReference contentReference)
    {
        value = contentReference.Id;
    }
    else
    {
        value = (int?) Model?.Value;
    }
}

<select name="@Model.Name" class="form-control" asp-items="@(SelectListHelpers.GetSiteNavigationContentItems(value))"></select>